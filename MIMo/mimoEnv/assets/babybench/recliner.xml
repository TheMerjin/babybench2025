<mujocoinclude>
  <asset>
    <material name="matmobile" rgba="0.9 0.8 0.7 1"/>
    <material name="mattoy1" rgba="0.7 0.4 0.5 1"/>
    <material name="mattoy2" rgba="0.4 0.7 0.5 1"/>
    <material name="mattoy3" rgba="0.5 0.6 0.8 1"/>
  </asset>

  <worldbody>
    <body name="baby_mobile" pos="0 0 1.5">
      <!-- Central hanger rod from ceiling -->
      <geom type="capsule" material="matmobile" size="0.01 0.3" pos="0 0 -0.3" euler="0 0 0"/>

      <!-- Crossbar (main frame) -->
      <geom type="box" material="matmobile" size="0.4 0.02 0.02" pos="0 0 -0.6"/>
      <geom type="box" material="matmobile" size="0.02 0.4 0.02" pos="0 0 -0.6"/>

      <!-- Hanging strings -->
      <geom type="capsule" material="matmobile" size="0.005 0.2" pos="0.25 0  -0.8" euler="90 0 0"/>
      <geom type="capsule" material="matmobile" size="0.005 0.2" pos="-0.25 0 -0.8" euler="90 0 0"/>
      <geom type="capsule" material="matmobile" size="0.005 0.2" pos="0 0.25 -0.8" euler="0 90 0"/>
      <geom type="capsule" material="matmobile" size="0.005 0.2" pos="0 -0.25 -0.8" euler="0 90 0"/>

      <!-- Hanging toys -->
      <!-- Toy 1: Sphere (simple, like a ball) -->
      <geom type="sphere" material="mattoy1" size="0.05" pos="0.35 0 -1.0"/>
      
      <!-- Toy 2: Capsule (longer, like a rocket or elongated shape) -->
      <geom type="capsule" material="mattoy2" size="0.03 0.08" pos="-0.35 0 -1.0"/>

      <!-- Toy 3: Box (like a block, soft cube) -->
      <geom type="box" material="mattoy3" size="0.05 0.05 0.05" pos="0 0.35 -1.0"/>

      <!-- Toy 4: Cone (for a star-like shape) -->
      <geom type="sphere" material="mattoy1" size="0.04 0.12" pos="0 -0.35 -1.0" euler="0 90 0"/>
    </body>
  </worldbody>
</mujocoinclude>